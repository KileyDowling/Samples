
@{
    ViewBag.Title = "Filter";
}

<h2>Filter</h2>

<div class="row" ng-app ng-init="friends=[{name: 'John', phone: '555-5555', age: 10},
     {name: 'Mary', phone: '555-5555', age: 10},
     {name: 'John', phone: '444-44444', age: 19},
     {name: 'Mike', phone: '222-2222', age: 21},
     {name: 'Adam', phone: '333-3333', age: 35},
     {name: 'Julie', phone: '111-1111', age: 29}]">

    <div class="col-sm-4">
        <input type="text" ng-model="friendFilter"/>
    </div>
    <div class="col-sm-4">
        <ul>
            <li ng-repeat="friend in friends | filter: friendFilter | orderBy: 'name'">
                {{friend.name}}, {{friend.phone}}, age: {{friend.age}}
            </li>
        </ul>
    </div>
</div>